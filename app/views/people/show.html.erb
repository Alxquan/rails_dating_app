<div class="row">
  <div class="header col s6 offset-s3">
    <h1 ><%= image_tag("hearts2.jpg", size: "50x50")%> <%= @person.name %>'s info' <%= image_tag("hearts2.jpg", size: "50x50")%> </h1>
  </div>
</div>
<hr>
<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Gender</th>
      <th>Height</th>
      <th>Hair Color</th>
      <th>Eye Color</th>
      <th>Activity Level</th>
      <th>Ethnicity</th>
      <th>Interests</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= @person.age %> </td>
      <td> <%= @person.gender %> </td>
      <td> <%= @person.height %> </td>
      <td> <%= @person.hair_color %> </td>
      <td> <%= @person.eye_color %> </td>
      <td> <%= @person.activity_level %></td>
      <td> <%= @person.ethnicity %> </td>
