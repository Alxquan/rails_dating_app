  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br/>
  <%= f.label :gender %>
  <%= f.text_field :gender %>
  <br/>
  <%= f.label :height %>
  <%= f.text_field :height %>
  <br/>
  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>
  <br/>
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>
  <br/>
  <%= f.label :ethnicity %>
  <%= f.text_field :ethnicity %>
  <br/>
  <%= f.label :interest %>
  <%= f.text_field :interest %>
