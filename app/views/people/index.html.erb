<div class="row">
  <div class="col s6 offset-s3">
    <h1 class="text" ><%= image_tag("hearts2.jpg", size: "50x50")%> People to date <%= image_tag("hearts2.jpg", size: "50x50")%> </h1>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="search">
    	<%= form_tag(people_path, :method => "get", id: "search-form") do %>
    		<%= text_field_tag :search, params[:search], placeholder: "Search" %>
    		<%= submit_tag "Search" %>
    	<% end %>
    </div>
  </div>
</div>

<h3><%= @nobody %> </h3>
  <!-- <ul class="list"> -->
	<div class="row">
  	<% @people.each do |person| %>
      <div class="col s12 m3">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <%= image_tag("BenHur.jpg",size: "60x60", class: "prefix responsive-img circle")%> 
            <span class="card-title"><%= person.name %></span> 



						<p>Gender: <%= person.gender %></p>
            <p>Age: <%= person.age %></p>
            <p>Height: <%= person.height %></p>
            <p>Eye Color: <%= person.eye_color %></p>
            <p>Hair Color: <%= person.hair_color %></p>
            <p>Ethnicity : <%= person.ethnicity%></p>
            <p>Interests: <%= person.interest %></p>

          </div>
          <div class="card-action">
						<%= link_to 'Personal Info', person_addresses_path(person) %>
            <%= link_to 'Favorites', person_favorites_path(person) %>

          </div>
        </div>
      </div>
  		<!-- <li><%= link_to person.name, person_path(person) %></li> -->
  	<% end %>
  </div>
	<!-- </ul> -->



<hr>
