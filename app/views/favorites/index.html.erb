<h1 class="text" ><%= image_tag("hearts2.jpg", size: "50x50", class: "header")%> <%= @person.name%>'s Favorites<%= image_tag("hearts2.jpg", size: "50x50", class: "header")%> </h1>

<hr>
<% if @favorites.any? %>
	<h3>Likes</h3>
	<ul>
		<% @favorites.each do |favorite| %>
		<li><%= link_to favorite.likes, person_favorite_path(@person, favorite) %></li>
		<% end%>
	</ul>
	<h3>Dislikes</h3>
	<ul>
		<% @favorites.each do |favorite| %>
		<li><%= link_to favorite.dislikes, person_favorite_path(@person, favorite) %></li>
		<% end %>
	</ul>
<% else %>
	<h3><%= @person.name %> does not have any Favorites. Please, <%= link_to 'add', new_person_favorite_path(@person) %> some.</h3>
<% end %>

<%= link_to "Back to #{@person.name}'s page", person_path(@person) %>