<h1><%= @person.name%>'s Favorites</h1>
<hr>
<% if @favorites.any? %>
	<ul>
		<% @favorites.each do |favorite| %>
		<li><%= favorite.name %></li>
		<% end%>
	</ul>
<% else %>
	<h3><%= @person.name %> does not have any Favorites. Please, <%= link_to 'add', new_person_favorite_path(@person) %> some.</h3>
<% end %>

<%= link_to "Back to #{@person.name}'s page", person_path(@person) %>